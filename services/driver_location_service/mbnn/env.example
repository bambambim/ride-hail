# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASS=postgres
DB_NAME=ride_hail

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASS=guest

# WebSocket Configuration
WEBSOCKET_PORT=8080

# Services Port Configuration
SERVICES_RIDE_SERVICE=3000
DRIVER_LOCATION_SERVICE=8082
ADMIN_SERVICE=3004

# Alternative: Direct URL Configuration (overrides individual settings above)
# DATABASE_URL=postgres://postgres:postgres@localhost:5432/ride_hail?sslmode=disable
# RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# Logging
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_LOCATION_INTERVAL=3s
RATE_LIMIT_LOCATION_CAPACITY=1

# PostGIS Configuration
DEFAULT_SEARCH_RADIUS_KM=5.0
MAX_NEARBY_DRIVERS=10

# Service Configuration
SERVICE_NAME=driver-location-service
SHUTDOWN_TIMEOUT=30s

# Timeouts
HTTP_READ_TIMEOUT=10s
HTTP_WRITE_TIMEOUT=10s
HTTP_IDLE_TIMEOUT=120s
