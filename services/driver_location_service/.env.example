# Server Configuration
HOST=0.0.0.0
PORT=8082

# Database Configuration
DATABASE_URL=postgres://postgres:postgres@localhost:5432/ride_hail?sslmode=disable
DB_MAX_CONNS=25
DB_MIN_CONNS=5

# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_EXCHANGE_RIDE=ride_topic
RABBITMQ_EXCHANGE_DRIVER=driver_topic
RABBITMQ_EXCHANGE_LOCATION=location_fanout
RABBITMQ_QUEUE_MATCHING=driver_matching
RABBITMQ_QUEUE_STATUS=ride_status_update

# Rate Limiting
RATE_LIMIT_LOCATION_INTERVAL=3s
RATE_LIMIT_LOCATION_CAPACITY=1

# WebSocket Configuration
WS_PING_PERIOD=54s
WS_PONG_WAIT=60s
WS_WRITE_WAIT=10s
WS_MAX_MESSAGE_SIZE=524288

# Logging
LOG_LEVEL=INFO

# Service Configuration
SERVICE_NAME=driver-location-service
SHUTDOWN_TIMEOUT=30s

# JWT Configuration (for token validation)
JWT_SECRET=your-secret-key-here
JWT_ISSUER=ride-hail-platform

# PostGIS Configuration
DEFAULT_SEARCH_RADIUS_KM=5.0
MAX_NEARBY_DRIVERS=10

# Timeouts
HTTP_READ_TIMEOUT=10s
HTTP_WRITE_TIMEOUT=10s
HTTP_IDLE_TIMEOUT=120s
